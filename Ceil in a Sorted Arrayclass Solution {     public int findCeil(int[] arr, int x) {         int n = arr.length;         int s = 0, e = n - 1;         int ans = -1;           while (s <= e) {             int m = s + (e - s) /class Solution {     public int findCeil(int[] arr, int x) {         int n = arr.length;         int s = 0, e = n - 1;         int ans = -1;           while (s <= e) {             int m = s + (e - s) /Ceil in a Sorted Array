class Solution {
    public int findCeil(int[] arr, int x) {
        int n = arr.length;
        int s = 0, e = n - 1;
        int ans = -1; 

        while (s <= e) {
            int m = s + (e - s) / 2;

            if (arr[m] == x) {
                ans = m;
                e = m - 1;
            } else if (arr[m] < x) {
                s = m + 1;
            } else {
                ans = m;  
                e = m - 1;
            }
        }
        return ans;
    }
}
