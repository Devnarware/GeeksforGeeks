class Solution {
    int lowerBound(int[] arr, int target) {
        // code here
        int n = arr.length ;
        int smallest = arr[0] ;
        int largest = arr[n-1] ;
        if(target>largest){
            return n ;
        }
        else{
            for(int i = 0 ; i<n ; i++){
                if(target<=arr[i]){
                    return i ;
                }
            }
        }
        return 0 ;
    }
}
